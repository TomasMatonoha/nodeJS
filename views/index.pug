doctype html 
html 
    head 
        title Seznam hudebních vkusů
        link(rel='stylesheet' href='https://getbootstrap.com/docs/4.4/dist/css/bootstrap.min.css')
    body
        header.bg-dark.p-3 
            h1.text-center.text-white #{nadpis}

        main.container 
            table.col-sm-12(class="table table-striped")
                thead 
                    tr.bg-dark.text-white
                        th Kapela
                        th Skladba
                tbody 
                    each udaj in udaje 
                        tr 
                            td #{udaj.kapela}
                            td #{udaj.skladba}
        footer.col-12.bg-dark.p-2.container.text-white 
            p.float-right 
                a(href="/") Zpět na formulář
            p &copy; 2022 - IT2 - NodeJS
        script(src='https://code.jquery.com/jquery-3.4.1.slim.min.js')
        script(src='https://getbootstrap.com/docs/4.4/dist/js/bootstrap.bundle.min.js')